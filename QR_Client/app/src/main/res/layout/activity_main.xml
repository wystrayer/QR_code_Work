<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.er_wei_ma_3.MainActivity">

    <TextView
        android:id="@+id/textView35"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="#4889ca"
        android:gravity="center"
        android:text="个性二维码扫描系统"
        android:textColor="#ffffff"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <Button
        android:id="@+id/button7"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:background="#000000"
        android:onClick="zhuce"
        android:text="注    册"
        android:textColor="#ffffff"
        app:layout_constraintRight_toLeftOf="@+id/button8"
        app:layout_constraintBaseline_toBaselineOf="@+id/button8"
        tools:layout_constraintBaseline_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/button8"
        android:layout_width="97dp"
        android:layout_height="48dp"

        android:layout_weight="1"
        android:background="#000000"
        android:text="登    录"
        android:onClick="denglu"
        android:textColor="#ffffff"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button6"
        app:layout_constraintLeft_toRightOf="@+id/button7" />

    <Button
        android:id="@+id/button6"
        android:layout_width="97dp"
        android:layout_height="48dp"
        android:onClick="zhizuo"
        android:layout_weight="1"
        android:background="#000000"
        android:text="二维码制作"
        android:textColor="#ffffff"
        app:layout_constraintBaseline_toBaselineOf="@+id/button8"
        tools:layout_constraintBaseline_creator="1"
        app:layout_constraintRight_toLeftOf="@+id/button_deng"
        app:layout_constraintLeft_toRightOf="@+id/button8" />

    <Button
        android:id="@+id/button_deng"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:background="#000000"
        android:onClick="er"
        android:text="二维码扫描"
        android:textColor="#ffffff"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/button6"
        tools:layout_constraintBaseline_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/button6" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        app:srcCompat="@drawable/saomiao"
        android:scaleType="fitXY"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/textView35"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="0.094" />


</android.support.constraint.ConstraintLayout>
